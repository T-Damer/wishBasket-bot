{
  "name": "wish-basket-bot",
  "version": "1.0.0",
  "description": "Telegram bot that will help you with wish-lists",
  "main": "dist/app.js",
  "repository": "https://github.com/T-Damer/wishBasket-bot",
  "author": "T-DaMER <dpancov64@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "yarn build-ts && node dist/app.js",
    "distribute": "yarn build-ts && node dist/app.js",
    "develop": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"yarn watch-js\" \"yarn watch-ts\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js"
  },
  "devDependencies": {
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.11.7",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.2.0",
    "@types/express": "^4.17.13",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mongoose": "6.0.13",
    "telegraf": "^4.3.0",
    "telegraf-i18n": "^6.6.0",
    "typescript": "^4.5.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
